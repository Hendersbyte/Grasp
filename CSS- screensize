/* Mobile phones */
@media screen and (max-width: 480px) {
  .text {
    font-size: 16px;}
  }

/* Tablets */
@media screen and (max-width:768px){
.text{
font-size: 24px;}
}

/* Small screens */
@media screen and (max--width:1024px){
.text{
font-size:33px}
}

/* Bigger screens i.e desktop */
@media screen and (max-width: 1200px){
.text{
     font-size:45px
    }
}
